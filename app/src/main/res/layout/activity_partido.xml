<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".partido.PartidoActivity">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/partido_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-15dp"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/partido_navigation" />

    <ScrollView
        android:id="@+id/scrollViewPartido"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/partido_navigation"
        android:layout_marginTop="0dp">

        <FrameLayout
            android:id="@+id/fragment_partido_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floating_action_button_partido"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        app:srcCompat="@drawable/ic_silbato"/>

</RelativeLayout>