<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/border"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/titulo_editar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:text="@string/alineacion"
        android:textSize="24sp"
        android:textColor="@color/primary_text"
        android:textStyle="bold"/>

    <ScrollView
        android:id="@+id/scrollview_editar"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_below="@id/titulo_editar"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:id="@+id/layoutJugadores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>

    </ScrollView>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/scrollview_editar">

        <RelativeLayout
            android:id="@+id/confirmar_edicion"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/boton_verde">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <TextView
                    android:id="@+id/txt_aceptar"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingEnd="10dp"
                    android:gravity="center"
                    android:text="@string/confirmar"
                    android:textColor="@color/icons" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_toEndOf="@id/txt_aceptar"
                    android:background="@android:color/transparent"
                    android:tint="@color/icons"
                    app:srcCompat="@drawable/ic_mode_edit"/>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>