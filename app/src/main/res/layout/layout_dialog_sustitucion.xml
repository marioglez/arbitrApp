<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_evento"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/textview_sustitucion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:text="@string/sustitucion"
        android:textSize="24sp"
        android:textColor="@color/primary_text"
        android:textStyle="bold"/>

    <Spinner
        android:id="@+id/spinner_sustitucion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_below="@id/textview_sustitucion"/>

    <RelativeLayout
        android:id="@+id/btn_confirmar"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner_sustitucion"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:background="@drawable/boton_gris">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/txt_gol_favor"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:paddingEnd="10dp"
                android:gravity="center"
                android:text="@string/confirmar"
                android:textColor="@color/icons" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_toEndOf="@id/txt_gol_favor"
                android:background="@android:color/transparent"
                android:tint="@color/icons"
                app:srcCompat="@drawable/ic_silbato"
                android:scaleX=".6"
                android:scaleY=".6"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>