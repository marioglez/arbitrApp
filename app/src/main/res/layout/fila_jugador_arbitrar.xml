<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/caja_arbitro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border">

            <TextView
                android:id="@+id/dorsalPersona"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:gravity="center"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:text="10"
                android:textSize="24sp"
                android:textColor="@color/primary_text" />

            <ImageView
                android:id="@+id/imageview_rol"
                android:visibility="invisible"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_weight="10"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_capitan" />

            <ImageView
                android:id="@+id/imageview_golFavor"
                android:visibility="invisible"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_weight="10"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_balon" />

            <ImageView
                android:id="@+id/imageview_golPropia"
                android:visibility="invisible"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_weight="10"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_balon_rojo" />

            <ImageView
                android:id="@+id/imageview_amarilla"
                android:visibility="invisible"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_weight="10"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_yellowcard" />

            <ImageView
                android:id="@+id/imageview_roja"
                android:visibility="invisible"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_weight="10"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_redcard" />

            <ImageView
                android:id="@+id/imageview_segundaAmarilla"
                android:visibility="invisible"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_weight="10"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_tarjetas" />

            <ImageView
                android:id="@+id/imageview_sustitucion"
                android:visibility="invisible"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_weight="10"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_sustitucion" />

            <ImageView
                android:id="@+id/imageview_lesion"
                android:visibility="invisible"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_weight="10"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_lesion" />
        </TableRow>

    </RelativeLayout>

</TableRow>