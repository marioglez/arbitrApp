<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/competicionesLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textviewPartidos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:padding="5dp"
        android:paddingStart="10dp"
        android:text="@string/partidos"
        android:textColor="@color/primary_text"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TableLayout
        android:id="@+id/tablaEquipoPartidos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textviewPartidos">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/primary_light"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="0dp"
            android:paddingBottom="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:paddingStart="10dp"
                android:text="@string/total"
                android:textColor="@color/primary_text" />

            <TextView
                android:id="@+id/textView_partidosTotal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:gravity="end"
                android:paddingEnd="10dp"
                android:text="@string/total"
                android:textColor="@color/primary_text" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="0dp"
            android:paddingBottom="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:paddingStart="10dp"
                android:text="@string/jugados"
                android:textColor="@color/primary_text" />

            <TextView
                android:id="@+id/textView_partidosJugados"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:gravity="end"
                android:paddingEnd="10dp"
                android:text="@string/jugados"
                android:textColor="@color/primary_text" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/primary_light"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="0dp"
            android:paddingBottom="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:paddingStart="10dp"
                android:text="@string/sinJugar"
                android:textColor="@color/primary_text" />

            <TextView
                android:id="@+id/textView_partidosSinJugar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:gravity="end"
                android:paddingEnd="10dp"
                android:text="@string/sinJugar"
                android:textColor="@color/primary_text" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="0dp"
            android:paddingBottom="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:paddingStart="10dp"
                android:text="@string/victorias"
                android:textColor="@color/primary_text" />

            <TextView
                android:id="@+id/textView_partidosVictorias"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:gravity="end"
                android:paddingEnd="10dp"
                android:text="@string/victorias"
                android:textColor="@color/primary_text" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/primary_light"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="0dp"
            android:paddingBottom="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:paddingStart="10dp"
                android:text="@string/empates"
                android:textColor="@color/primary_text" />

            <TextView
                android:id="@+id/textView_partidosEmpates"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:gravity="end"
                android:paddingEnd="10dp"
                android:text="@string/empates"
                android:textColor="@color/primary_text" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="0dp"
            android:paddingBottom="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:paddingStart="10dp"
                android:text="@string/derrotas"
                android:textColor="@color/primary_text" />

            <TextView
                android:id="@+id/textView_partidosDerrotas"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:gravity="end"
                android:paddingEnd="10dp"
                android:text="@string/derrotas"
                android:textColor="@color/primary_text" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/textviewGoles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tablaEquipoPartidos"
        android:background="@color/colorAccent"
        android:padding="5dp"
        android:paddingStart="10dp"
        android:text="@string/goles"
        android:textColor="@color/primary_text"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TableLayout
        android:id="@+id/tablaEquipoGoles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textviewGoles">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/primary_light"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="0dp"
            android:paddingBottom="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:paddingStart="10dp"
                android:text="@string/favor"
                android:textColor="@color/primary_text" />

            <TextView
                android:id="@+id/textView_golesFavor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:gravity="end"
                android:paddingEnd="10dp"
                android:text="@string/favor"
                android:textColor="@color/primary_text" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="0dp"
            android:paddingBottom="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:paddingStart="10dp"
                android:text="@string/contra"
                android:textColor="@color/primary_text" />

            <TextView
                android:id="@+id/textView_golesContra"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:gravity="end"
                android:paddingEnd="10dp"
                android:text="@string/contra"
                android:textColor="@color/primary_text" />

        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/textviewTarjetas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tablaEquipoGoles"
        android:background="@color/colorAccent"
        android:padding="5dp"
        android:paddingStart="10dp"
        android:text="@string/tarjetas"
        android:textColor="@color/primary_text"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TableLayout
        android:id="@+id/tablaEquipoTarjetas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textviewTarjetas">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/primary_light"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="0dp"
            android:paddingBottom="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:paddingStart="10dp"
                android:text="@string/total"
                android:textColor="@color/primary_text" />

            <TextView
                android:id="@+id/textView_tarjetasTotal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:gravity="end"
                android:paddingEnd="10dp"
                android:text="@string/total"
                android:textColor="@color/primary_text" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="0dp"
            android:paddingBottom="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:paddingStart="10dp"
                android:text="@string/amarillas"
                android:textColor="@color/primary_text" />

            <TextView
                android:id="@+id/textView_tarjetasAmarillas"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:gravity="end"
                android:paddingEnd="10dp"
                android:text="@string/amarillas"
                android:textColor="@color/primary_text" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/primary_light"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="0dp"
            android:paddingBottom="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:paddingStart="10dp"
                android:text="@string/rojas"
                android:textColor="@color/primary_text" />

            <TextView
                android:id="@+id/textView_tarjetasRojas"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:gravity="end"
                android:paddingEnd="10dp"
                android:text="@string/rojas"
                android:textColor="@color/primary_text" />

        </TableRow>

    </TableLayout>

</RelativeLayout>